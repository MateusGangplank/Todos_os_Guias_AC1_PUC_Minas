//-------------------------------------------------
// -- Uma or gate feita por NAND gate --
// ------------------------------------------------

module ORgate(s, p , q);
  output s;			// Saida
  input p, q;		// entrada das portas
  
  wire temp1, temp2;	// portas auxiliares
  
  nand NAND1(temp1, p); // operaçao nand com a porta p
  nand NAND2(temp2, q); // operaçao nand com a porta q
  
  assign s = ~(temp1 & temp2); // operação final
  
endmodule // ORgate
// fim modulo

// modulo final
module testandogate;

