// -- modulo Exercicio 05

module exe05 (s, a, b, c, d);

input a, b, c, d;
output s; 
wire w1, w2, w3, w4, w5, w6, w7, w8;

nor N1(w1, a, a);
nor N2(w2, d, d);
nor N3(w3, w1, w2);
nor N4(w4, a, d);
nor N5(w5, b, c);
nor N6(w6, w5, w5);
nor N7(w7, w6, d);
nor N8(w8, w7, w4, w3);
nor N9(s, w8, w8);

endmodule // exe05

